# GoHighLevel API Configuration
# Copy this file to .env and fill in your values

# Private Integration Token (for simple authentication)
# Get this from your GoHighLevel account settings
GHL_PRIVATE_TOKEN=your_private_integration_token_here

# OAuth Configuration (for OAuth flow)
GHL_CLIENT_ID=your_oauth_client_id
GHL_CLIENT_SECRET=your_oauth_client_secret
GHL_REDIRECT_URI=http://localhost:3000/oauth/callback

# Webhook Secret (for webhook signature verification)
GHL_WEBHOOK_SECRET=your_webhook_secret_here

# Optional: Default Location ID
GHL_DEFAULT_LOCATION=your_default_location_id